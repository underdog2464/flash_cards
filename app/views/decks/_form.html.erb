<%= form_for @deck do |f| %>
  
  <% if @deck.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@deck.errors.count, "error") %>
      prohibited this article from being saved:
    </h2>
    <ul>
      <% @deck.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label 'Description' %><br>
    <%= f.text_area :desc, size: "40x8" %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to "Back to Decks", decks_path %>